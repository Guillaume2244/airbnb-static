
<div class="container text-center">
  <div class="row">
    <% flat = data.flats[owner] %>
      <div class="col-md-4">
        <div class="text-center">
          <%= image_tag flat.owner_picture, class: "img-circle" %>
          <h2><%= flat.owner_name %></h2>
          <p><%= flat.summary %></p>
          <p><%= flat.city %></p>
        </div>
      </div>
  </div>
</div>
